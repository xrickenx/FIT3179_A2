{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",  
      "format": {
        "type": "topojson",
        "feature": "districts"  
      }
    },
    "transform": [
      {
        "lookup": "properties.district_code",  
        "from": {
          "data": {
            "url": "_Malaysia+Flood+Dataset_Malaysia+Flood+Dataset.csv"  
          },
          "key": "DISTRICT", 
          "fields": ["FLOOD", "ANNUAL RAINFALL"]  
        }
      }
    ],
    "projection": {
      "type": "mercator"
    },
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "FLOOD",
        "type": "quantitative",
        "scale": {
          "domain": [0, 1],
          "range": ["#ffffff", "#ff0000"]  
        },
        "legend": {
          "title": "Flood Occurrence"
        }
      },
      "tooltip": [
        {"field": "properties.district_name", "title": "District"},  
        {"field": "FLOOD", "title": "Flood Occurrence"},
        {"field": "ANNUAL RAINFALL", "title": "Annual Rainfall"}
      ]
    }
  }
  