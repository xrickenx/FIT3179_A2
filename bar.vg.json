{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Annual Rainfall Distribution Across Malaysian States (2000 - 2010)",
        "fontSize": 18,
        "anchor": "middle"
    },
    "width": 1250,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/xrickenx/FIT3179_A2/refs/heads/main/data/_Malaysia%2BFlood%2BDataset_Malaysia%2BFlood%2BDataset.csv",
        "format": {
            "type": "csv"
        }
    },
    "layer": [
        {
            "mark": "area",
            "params": [
                {
                    "name": "stateHighlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "STATE_NAME"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "encoding": {
                "x": {
                    "field": "YEAR",
                    "timeUnit": "year",
                    "axis": {
                        "title": "Year",
                        "domain": false
                    }
                },
                "y": {
                    "field": "ANNUAL RAINFALL",
                    "type": "quantitative",
                    "axis": {
                        "title": "Annual Rainfall (mm)"
                    }
                },
                "color": {
                    "field": "STATE_NAME",
                    "type": "nominal",
                    "legend": {
                        "title": "State"
                    }
                },
                "opacity": {
                    "condition": {
                        "param": "stateHighlight",
                        "value": 1
                    },
                    "value": 0.1
                },
                "tooltip": [
                    {
                        "field": "YEAR",
                        "timeUnit": "year",
                        "type": "quantitative",
                        "title": "Year"
                    },
                    {
                        "field": "ANNUAL RAINFALL",
                        "type": "quantitative",
                        "title": "Rainfall (mm)"
                    },
                    {
                        "field": "STATE_NAME",
                        "type": "nominal",
                        "title": "State"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "aggregate": [
                        {
                            "op": "mean",
                            "field": "ANNUAL RAINFALL",
                            "as": "mean_rainfall"
                        }
                    ]
                }
            ],
            "mark": "rule",
            "encoding": {
                "y": {
                    "field": "mean_rainfall",
                    "type": "quantitative"
                },
                "color": {
                    "value": "green"
                },
                "size": {
                    "value": 2
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": -10
            },
            "encoding": {
                "x": {
                    "datum": 2000,
                    "type": "quantitative"
                },

                "y": {
                    "datum": 3000,
                    "type": "quantitative"
                },
                "text": {
                    "value": "Mean Rainfall"
                },
                "color": {
                    "value": "green"
                },
                "fontSize": {
                    "value": 12
                }
            }
        }
    ]
}
